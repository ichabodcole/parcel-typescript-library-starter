{
    "compilerOptions": {
        "lib": [
            "dom"
        ],
        "moduleResolution": "node",
        "target": "es5",
        "module": "es6",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
        },
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules",
        "**/__test__/*"
    ],
}