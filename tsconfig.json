{
    "compilerOptions": {
        "lib": [
            "dom"
        ],
        "moduleResolution": "node",
        "target": "es5",
        "module": "es6",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules",
        "**/__test__/*"
    ],
}